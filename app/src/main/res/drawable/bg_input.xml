<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background color mengikuti surface agar konsisten dengan desainmu -->
    <solid android:color="@color/surface" />

    <!-- gunakan radius yang sudah ada di project -->
    <corners android:radius="@dimen/card_corner_radius" />

    <!-- beri sedikit padding agar teks tidak menempel -->
    <padding
        android:left="@dimen/padding_small"
        android:top="@dimen/padding_small"
        android:right="@dimen/padding_small"
        android:bottom="@dimen/padding_small" />

    <!-- optional thin stroke untuk batas -->
    <size android:height="48dp" />
</shape>
