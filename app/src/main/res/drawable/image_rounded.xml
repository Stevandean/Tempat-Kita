<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang sementara (abu lembut) -->
    <solid android:color="#E0E0E0" />

    <!-- Membulatkan keempat sudut -->
    <corners android:radius="12dp" />

    <!-- Tambahkan sedikit bayangan agar terlihat menonjol -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
